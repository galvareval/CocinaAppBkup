<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CocinApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#7E4932</item>
        <item name="colorPrimaryVariant">#7E4932</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#7E4932</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item> <!-- Deshabilita la barra de acción -->
        <item name="android:windowNoTitle">true</item> <!-- Oculta el título de la ventana -->
    </style>
    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Color del botón "Aceptar" -->
        <item name="colorAccent">#7E4932</item>
        <!-- Color del botón "Cancelar" -->
        <item name="android:textColorSecondary">#FFFFFF</item>
        <!-- Color del selector de fecha -->
        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Dialog">
        <!--  color del selector de fecha -->
        <item name="colorAccent">#7E4932</item>
        <item name="android:background">@color/black</item>
    </style>

</resources>