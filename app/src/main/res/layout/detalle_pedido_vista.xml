<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:clickable="true">>


    <TextView
        android:id="@+id/nombreRacionDetalle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="@string/nombreRacion"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cantidadRacionVistaDetalle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="82dp"
            android:layout_marginTop="20dp"
            android:text="@string/cantidadRacionDetalle"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/cantidadRacionDetalleVistaDetalle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/cantidadRacionDetalle"
            android:textSize="18dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/precioRacionVistaDetalle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="20dp"
            android:text="@string/precioDetalle"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/precioRacionDetalleVistaDetalle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="20dp"
            android:text="@string/precioDetalle"
            android:textSize="18dp"
            />

    </LinearLayout>


</RelativeLayout>
